@model List<Product>
@{
    ViewBag.Title = "Product List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                  @ViewBag.Title
                    @Html.ActionLink("New Prodcut", "Add", null, new { @class="btn btn-success"})
                </header>
                <table class="table table-striped table-advance table-hover">
                    <thead>
                        <tr>
                            <th>Product ID</th>
                            <th>Product Name</th>
                            <th>Unit Price</th>
                            <th>UnitsInStock</th>
                            <th>Category Name</th>
                            <th>Dicsontinued</th>
                            <th>Edit</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var p in Model)
                        {
                        <tr>
                            <td>@p.ProductID</td>
                            <td>
                                <a href="@Url.Action("Detail","Product",new { id=p.ProductID})">
                                    @p.ProductName
                                </a>
                            </td>
                            <td>@p.UnitPrice</td>
                            <td>@p.UnitsInStock</td>
                            <td>@p.Category.CategoryName</td>
                            @switch (p.Discontinued)
                                {
                                    case true:
                                    <td><span class="label label-success label-mini">Continue</span></td>
                                        break;
                                    case false:
                                    <td><span class="label label-danger label-mini">Break</span></td>
                                    break;

                            }
                        <td>
                            @Html.ActionLink("Edit", "Update", new { id = p.ProductID }, new { @class = "btn btn-xs btn-warning" })
                            @Html.ActionLink("Delete", "Delete", new { id = p.ProductID }, new { @class = "btn btn-xs btn-danger" })
                        </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </section>
        </div>
    </div>
