@model  List<Order> 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="row">
        
        <!-- /.col-lg-3 -->

       
            
                <div class="row state-overview">
                    <div class="col-lg-3 col-sm-6">
                        <section class="panel">
                            <div class="symbol terques">
                                <i class="icon-user"></i>
                            </div>
                            <div class="value">
                                <h1>
                                    @ViewBag.EmployeeList
                                </h1>
                                <p>Total Number Of Employees</p>
                            </div>
                        </section>
                    </div>
                    <div class="col-lg-3 col-sm-6">
                        <section class="panel">
                            <div class="symbol red">
                                <i class="icon-tags"></i>
                            </div>
                            <div class="value">
                                <h1>@TempData["ProductPiece"]</h1>
                                <p>Total Number Of Product Piece</p>
                            </div>
                        </section>
                    </div>
                    <div class="col-lg-3 col-sm-6">
                        <section class="panel">
                            <div class="symbol yellow">
                                <i class="icon-shopping-cart"></i>
                            </div>
                            <div class="value">
                                <h1 >@TempData["Order_Detail"]</h1>
                                <p>Total Number Of Order</p>
                            </div>
                        </section>
                    </div>
                    <div class="col-lg-3 col-sm-6">
                        <section class="panel">
                            <div class="symbol blue">
                                <i class="icon-bar-chart"></i>
                            </div>
                            <div class="value">
                                <h1></h1>
                                <p>Total Earnings</p>
                            </div>
                        </section>
                    </div>
                </div>
            
                <div class="row">
                    <div class="col-lg-12">
                        <section class="panel">
                            <header class="panel-heading">
                                Recent Sales
                            </header>
                            <table class="table table-striped table-advance table-hover">
                                <thead>
                                    <tr>
                                        <th>Order ID</th>
                                        <th>Customer ID</th>
                                        <th>Employee FirstName</th>
                                        <th>Employee LastName</th>
                                        <th>OrderDate</th>
                                        <th>Fright</th>
                                        <th>Ship City</th>
                                        <th>Ship Name</th>
                                        <th>Ship country</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        @foreach (var p in Model)
                                        {
                                    <tr>
                                        <td>@p.OrderID</td>
                                        <td>
                                            @p.Customer.CustomerID
                                        </td>
                                        <td>@p.Employee.FirstName</td>
                                        <td>@p.Employee.LastName</td>
                                        <td>@p.OrderDate</td>
                                        <td>
                                            @p.Freight
                                        </td>
                                        <td>
                                            @p.ShipCity

                                        </td>
                                        <td>
                                            @p.ShipName
                                        </td>
                                        <td>
                                            @p.ShipCountry
                                        </td>
                                    </tr>
                                        }
                                
                                    </tbody>
                            </table>
                        </section>
                    </div>
                </div>

        </div>
        <!-- /.row -->
  

